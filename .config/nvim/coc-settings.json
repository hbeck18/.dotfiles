{
    // explorer
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": true,
    "explorer.icon.enableVimDevicons": false,
    "explorer.keyMappings": {
        "<cr>": [
            "expandable?",
            [
                "expanded?",
                "collapse",
                "expand"
            ],
            "open"
        ],
        "v": "open:vsplit"
    },
    // autoformat
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "markdown",
        "yaml",
        "json",
        "python",
        "tex"
    ],
    // Python
    "coc.preferences.hoverTarget": "float",
    "python.linting.enabled": true,
    "python.analysis.diagnosticEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/anaconda3/envs/neovim/bin/flake8",
    "python.linting.flake8Args": [
        "--ignore=E501,W503,E402,E116,E203,W391",
        "--format=default"
    ],
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/anaconda3/envs/neovim/bin/black",
    "python.condaPath": "~/anaconda3/bin/conda",
    "python.jediEnabled": false,
    "python.jediPath": "~/anaconda3/envs/neovim/lib/python3.8/site-packages/",
    // diagnostics
    "diagnostic.displayByAle": true
}
